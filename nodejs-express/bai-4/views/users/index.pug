extends ../layouts/common
block content
    h1 
      span.mr-3 Users
      a(href="/users/create", class="btn btn-primary") New

    .d-flex.align-items-center
      form.ml-auto(action='/users/search', method='get', class="d-flex")
        
          input(type='text', name='q', value=q, class="form-control")
          button(class="btn btn-primary ml-2") Search
    table.table.table-hover.table-striped
      thead
        th Avatar
        th Name
        th Phone
        th Actions
      each user in users
        tr
          td
            img(src=user.avatar, width="64")
          td= user.name
          td= user.phone
          td
            a(href="/users/"+user.id, class="btn btn-secondary") view