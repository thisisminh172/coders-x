extends ../layouts/common
block content
    h1 Create user

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="POST",enctype="multipart/form-data")
     .form-group
        label(for="name") Name
        input.form-control#name(type="text",name="name", value=values?values.name : "")
        //- label Phone
        //- input(type="text",name="phone")
     .form-group
        label(for="phone") Phone
        input.form-control#phone(type="text",name="phone", value=values?values.phone : "")
     .form-group
        label(for="image")  avatar
        input.form-control-file#image(type="file",name="avatar")
     button.btn.btn-success Create