extends ../layouts/common
block content
    h1 LOGIN

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/auth/login", method="POST")
     .form-group
        label(for="email") Email
        input.form-control#email(type="text",name="email", value=values?values.email : "")
        //- label Phone
        //- input(type="text",name="phone")
     .form-group
        label(for="password") Password
        input.form-control#password(type="text",name="password", value=values?values.password : "")
     button.btn.btn-success LOGIN